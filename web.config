<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- This handles the frontend (React/Angular/etc.) -->
    <rewrite>
      <rules>
        <!-- If the request does not contain 'api', serve the frontend -->
        <rule name="React Routes" stopProcessing="true">
          <match url="^(.*)$" ignoreCase="false" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_URI}" pattern="^/api" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/frontend/{R:1}" />
        </rule>
      </rules>
    </rewrite>

    <!-- This handles the backend API (Node.js/Express) -->
    <handlers>
      <add name="iisnode" path="backend/server.js" verb="*" modules="iisnode"/>
    </handlers>

    <iisnode loggingEnabled="true" devErrorsEnabled="true"/>
  </system.webServer>
</configuration>
